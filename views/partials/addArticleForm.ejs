<div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form" class="addArticle" action="/article" method="post" enctype="multipart/form-data">
                    <div class="avatarDiv">
                        <a href="">
                            <div class="avatar">
                                <img src="/imgs/profile.png" alt="">
                            </div>
                        </a>
                    </div>

                    <div class="fields">
                        <div>
                            <div class="mb-3" style="display: flex;">
                                <select id="published" name="published" class="form-select fSel" aria-label="Default select example">
                                    <option value="true" selected>Public</option>
                                    <option value="false">Me only</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                Categories :
                                <div style="display: flex; width: 100%; margin-bottom: 12px;">
                                    <div style="width: 50%">
                                        <% for(var i = 0; i < categories.length; i++) { %>
                                            <% if (!(i % 2)) { %> 
                                                <div class="form-check">
                                                    <input class="form-check-input" name="category[]" type="checkbox" value="<%= categories[i].id %>" id="flexCheckDefault<%= i %>">
                                                    <label class="form-check-label" for="flexCheckDefault<%= i %>"> <%= categories[i].nom %> </label>
                                                </div>
                                            <% } %>
                                        <% } %>
                                    </div>
                                    <div style="width: 50%">
                                        <% for(var i = 0; i < categories.length; i++) { %>
                                            <% if (i % 2) { %> 
                                                <div class="form-check">
                                                    <input class="form-check-input" name="category[]" type="checkbox" value="<%= categories[i].id %>" id="flexCheckDefault<%= i %>">
                                                    <label class="form-check-label" for="flexCheckDefault<%= i %>"> <%= categories[i].nom %> </label>
                                                </div>
                                            <% } %>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <input id="title" name="title" type="text" class="form-control inp" id="exampleFormControlInput1" placeholder="Title">
                            </div>

                            <div class="mb-3">
                                <textarea id="content" name="content" class="form-control ta" id="ta" placeholder="What are you thinking about ?"></textarea>
                            </div>

                            <div class="mb-3">
                                <input class="form-control inp" name="image" type="file" id="formFile" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <button id="real" type="submit" class="btn btn-primary real">Save changes</button>
                </form>
            </div>
            <div class="modal-footer">
                <button id="fake" type="button" class="btn btn-primary share">Share it !</button>
            </div>
        </div>
    </div>
</div>